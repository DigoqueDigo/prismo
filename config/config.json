{
  "workload": {
    "limit": 4096000,
    "block_size": 4096,
    "filename": "testfile",
    "operation_pattern": "constant",
    "access_pattern": "sequential",
    "block_generator": "random",
    "backend_engine": "posix",
    "metric": "full",
    "logging": "spdlog"
  },

  "operation_pattern": {
    "constant": {
      "operation": "read"

    },
    "percentage": {
      "read_percentage": 50
    },
    "mixed": {
      "pattern": [
        "read",
        "read",
        "write",
        "read",
        "write",
        "write",
        "write"
      ]
    }
  },

  "access_pattern": {
    "sequential": {},
    "random": {},
    "zipfian": {
      "skew": 0.9
    }
  },

  "block_generator": {
    "constant": {},
    "random": {}
  },

  "backend_engine": {
    "posix": {
      "flags": [
        "O_CREAT",
        "O_RDWR",
        "O_DIRECT"
      ],
      "barrier": {
        "flush": 0,
        "fsync": 0,
        "fdata_sync": 0
      },
      "close": {
        "fsync": true
      }
  },

  "metric": {
    "none": {},
    "base": {},
    "standard": {},
    "full": {}
  },

  "logging": {
    "spdlog": {
      "name": "dedisbench",
      "queue_size": 8192,
      "thread_count": 1,
      "truncate": true,
      "stdout": true,
      "files": [
        "./log1.log",
        "./log2.log",
        "./log3.log"
      ]
    }
  }
}
